Import('env')

lib_paths = []
lib_paths.append (env['soci_lib_path'])
lib_paths.append (env['mysql_lib_path'])

env.Program(target = 'hCraft', source = hCraft_sources, LIBS = hCraft_libs,
	LIBPATH=lib_paths)

